<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

    <TextView
        android:id="@+id/incargo_dialog_txtItemSelectTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:text="TextView" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/incargo_dialog_btnConIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:text="화물 보세구역내 진입 등록 "
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/incargo_dialog_btnDevCom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:text="입고작업 완료 \n 컨테이너 회수 요청"
                android:textStyle="bold|italic" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/incargo_dialog_btnInsCom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:text="검수완료 \n 반입요청 "
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/incargo_dialog_btnIncargoCom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:text="창고반입 완료 등록"
                android:textStyle="italic|bold" />
        </LinearLayout>
   </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/incargo_dialog_btnRegPicAndSearch"
        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#A5C0D6"
        android:text="사진등록,검색"
        android:textColor="#FA0000"
        android:textStyle="bold|italic" />




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/incargo_dialog_btnNewIncargo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:backgroundTint="#32395E"
                android:text="신규화물정보 알림"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/incargo_dialog_btnRegPallet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:backgroundTint="#32395E"
                android:text="팔렛트 등록"
                android:textStyle="italic|bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>